{
  "name": "bilu-shape",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "bilu": "concurrently -n \"Frontend (Vite),Backend (Server)\" \"npm run dev:clean\" \"cd server && npm run dev\"",
    "dev": "vite --force",
    "dev:clean": "powershell -Command \"if (Test-Path node_modules/.vite) { Remove-Item -Recurse -Force node_modules/.vite }\" && vite --force",
    "build": "vite build",
    "build:server": "cd server && npm run build",
    "start": "node server/index.js",
    "start:next": "cd server && npm run start",
    "start:pm2": "pm2 start ecosystem.config.cjs",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "android:icons": "powershell -ExecutionPolicy Bypass -File scripts/generate-android-icons.ps1",
    "android:build": "powershell -ExecutionPolicy Bypass -File scripts/build-android-debug.ps1",
    "android:clean": "cd android && gradlew clean",
    "android:assemble": "cd android && gradlew assembleDebug",
    "android:commit": "powershell -ExecutionPolicy Bypass -File scripts/commit-release.ps1",
    "android:build-commit": "powershell -ExecutionPolicy Bypass -File scripts/build-and-commit.ps1"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.1",
    "@capacitor/camera": "^8.0.0",
    "@expo/metro-runtime": "~6.1.2",
    "@ionic/pwa-elements": "^3.3.0",
    "@supabase/supabase-js": "^2.47.10",
    "expo": "^54.0.32",
    "lucide-react": "^0.294.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native-web": "^0.21.0",
    "recharts": "^2.15.4"
  },
  "devDependencies": {
    "@capacitor/cli": "^8.0.1",
    "@capacitor/core": "^8.0.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}
